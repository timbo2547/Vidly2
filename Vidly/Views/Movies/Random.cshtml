@using Vidly.ViewModels
@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@(((Movie) ViewData["Movie"]).Name)</h2>
